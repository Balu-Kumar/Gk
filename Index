<div class="quiz-container">
    <div id="topic-selection">
        <h2>Select a Topic:</h2>
        <button onclick="selectTopic('politics')">Politics</button>
        <button onclick="selectTopic('economy')">Economy</button>
        <button onclick="selectTopic('science')">Science & Technology</button>
        <button onclick="selectTopic('sports')">Sports</button>
        <button onclick="selectTopic('entertainment')">Entertainment</button>
        <button onclick="selectTopic('geography')">Geography</button>
        <button onclick="selectTopic('history')">History</button>
        <button onclick="selectTopic('environment')">Environment</button>
        <button onclick="selectTopic('international')">International Affairs</button>
        <button onclick="selectTopic('defense')">Defense & Security</button>
    </div>
    <div id="quiz" style="display:none;">
        <h2 class="question"></h2>
        <div class="options"></div>
        <button onclick="showHint()">Hint</button>
        <p id="hint"></p>
        <p id="result"></p>
        <button onclick="nextQuestion()">Next Question</button>
    </div>
    <div id="thank-you">
        <h2>Thank you, <span id="username"></span>!</h2>
        <p>Your participation was appreciated!</p>
    </div>
</div>

<script>
    const questionBank = {
        politics: [
            { question: "Who is the current Prime Minister of India?", options: ["Narendra Modi", "Rahul Gandhi", "Amit Shah", "Arvind Kejriwal"], correctAnswer: [0], hint: "He has been in office since 2014." },
            { question: "Which political party is currently ruling India?", options: ["BJP", "Congress", "AAP", "TMC"], correctAnswer: [0], hint: "It is led by Narendra Modi." }
        ],
        economy: [
            { question: "What is the current GST rate for essential goods?", options: ["5%", "12%", "18%", "28%"], correctAnswer: [0], hint: "It is the lowest slab." }
        ],
        science: [
            { question: "What is India's latest space mission?", options: ["Chandrayaan-3", "Gaganyaan", "Mangalyaan-2", "Aditya-L1"], correctAnswer: [3], hint: "It studies the Sun." }
        ],
        sports: [
            { question: "Who won the latest IPL tournament?", options: ["Mumbai Indians", "Chennai Super Kings", "Delhi Capitals", "Kolkata Knight Riders"], correctAnswer: [1], hint: "MS Dhoni leads this team." }
        ],
    };

    let questions = [];
    let currentQuestionIndex = 0;

    function selectTopic(topic) {
        questions = questionBank[topic] || [];
        document.getElementById('topic-selection').style.display = 'none';
        document.getElementById('quiz').style.display = 'block';
        showQuestion();
    }

    function showQuestion() {
        let question = questions[currentQuestionIndex];
        document.querySelector('.question').textContent = question.question;
        let optionsDiv = document.querySelector('.options');
        optionsDiv.innerHTML = '';
        document.getElementById('hint').style.display = 'none';
        document.getElementById('result').textContent = '';
        
        question.options.forEach((option, index) => {
            let optionElement = document.createElement('div');
            optionElement.innerHTML = `<input type="radio" name="option" id="option${index}" value="${index}" /><label for="option${index}">${option}</label>`;
            optionsDiv.appendChild(optionElement);
        });
    }

    function showHint() {
        document.getElementById('hint').textContent = questions[currentQuestionIndex].hint;
        document.getElementById('hint').style.display = 'block';
    }

    function nextQuestion() {
        currentQuestionIndex++;
        if (currentQuestionIndex < questions.length) {
            showQuestion();
        } else {
            document.getElementById('quiz').style.display = 'none';
            document.getElementById('thank-you').style.display = 'block';
        }
    }
</script>

</body>
