import random

# Friend data
friends = {
    "Maddy": {
        "role": "Data Analyst",
        "messages": [
            "Maddy, stop analyzing and start enjoying!",
            "Maddy, did you just visualize our friendship in a pie chart? ğŸ¥§",
            "Maddy, your data says we are best friends for life!"
        ]
    },
    "Tavvika": {
        "role": "Mischief Master",
        "messages": [
            "Tavvika, what are you plotting now? ğŸ˜ˆ",
            "Tavvika, I know that smirk means trouble!",
            "Tavvika, you are the 'error' in my perfect plan! ğŸ¤¯"
        ]
    }
}

def generate_message(name):
    """Generate a fun message for a given friend."""
    if name in friends:
        return random.choice(friends[name]["messages"])
    return f"{name}, you are awesome too!"

if __name__ == "__main__":
    print("Welcome to Zenith's Best Friend Messenger!")
    name = input("Enter your name (Maddy/Tavvika): ").strip()
    print(generate_message(name))
